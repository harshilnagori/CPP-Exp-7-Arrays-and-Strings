#include <iostream>

using namespace std;

int main() {
    int size;
    const int MAX_SIZE = 100;
    int arr[MAX_SIZE];
    int sum = 0;
    int average;

    cout << "Enter the number of elements (max " << MAX_SIZE << "): ";
    cin >> size;

    if (size <= 0 || size > MAX_SIZE) {
        cout << "Invalid size. Please enter a number between 1 and " << MAX_SIZE << "." << endl;
        return 1;
    }

    cout << "Enter " << size << " integers for the array:" << endl;
    for (int i = 0; i < size; ++i) {
        cout << "Enter element " << i + 1 << ": ";
        cin >> arr[i];
    }

    for (int i = 0; i < size; ++i) {
        sum += arr[i];
    }

    average = sum / size;

    cout << "\nSum of array elements: " << sum << endl;
    cout << "Average of array elements: " << average << endl;

    return 0;
}
