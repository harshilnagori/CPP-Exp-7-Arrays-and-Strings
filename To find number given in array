#include <iostream>

using namespace std;

int main() {
    int arr[5] = {10, 20, 30, 40, 50};
    int size = 5;

    int searchNum;
    bool found = false;
    int index = -1;

    cout << "Our array contains the numbers: ";
    for (int i = 0; i < size; ++i) {
        cout << arr[i] << " ";
    }
    cout << endl;

    cout << "Enter the number you want to find: ";
    cin >> searchNum;

    for (int i = 0; i < size; ++i) {
        if (arr[i] == searchNum) {
            found = true;
            index = i;
            break;
        }
    }

    if (found) {
        cout << "Number " << searchNum << " found at index " << index << "." << endl;
    } else {
        cout << "Number " << searchNum << " not found in the array." << endl;
    }

    return 0;
}
